datasource db {
  provider = "postgresql"
}

generator client {
  provider     = "prisma-client-js"
  output       = "../prisma/generated"
  moduleFormat = "cjs"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}
